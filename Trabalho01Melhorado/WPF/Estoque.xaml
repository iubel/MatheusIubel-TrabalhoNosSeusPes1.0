<Window x:Class="WPF.Estoque"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Estoque" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid Background="#FF0D161A">

        <Button Content="Voltar" HorizontalAlignment="Left" Margin="50,370,0,0" VerticalAlignment="Top" Width="75" Background="#00DDDDDD" BorderBrush="#FF00536C" Foreground="#FF00536C" FontFamily="Sigmar One" FontSize="16" Click="BTN_Voltar"/>
        <DataGrid x:Name="DTG_Estoque" HorizontalAlignment="Left" Height="279" Margin="10,66,0,0" VerticalAlignment="Top" Width="774" Background="#00F0F0F0" BorderBrush="#FF00536C" Foreground="#FF00536A"/>
        <Label Content="Estoque" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="Snap ITC" FontSize="36">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF00ABDF"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

    </Grid>
</Window>
